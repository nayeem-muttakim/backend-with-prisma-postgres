generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  //relations
  wishlistItems WishlistItem[]
  book          Book[]         @relation("BookSeller")
}

model Book {
  id          String   @id @default(uuid())
  title       String
  overview    String?
  releaseYear Int
  genres      String[] @default([])
  author      String
  soldBy      String
  listedAt    DateTime @default(now())

  //relations
  seller        User           @relation("BookSeller", fields: [soldBy], references: [id])
  wishlistItems WishlistItem[]
}

model WishlistItem {
  id        String         @id @default(uuid())
  userId    String
  bookId    String
  status    WishlistStatus @default(PLANNED)
  rating    Int?
  notes     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @default(now())

  //relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
}

enum WishlistStatus {
  PLANNED
  READING
  COMPLETED
  DROPPED
}
